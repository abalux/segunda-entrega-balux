<div> 
    <h1>Products</h1>
    <form>
        <input type="text" name="title" id="" placeholder="title" required>
        <input type="text" name="description" id="" placeholder="description" required>
        <input type="number" name="stock" id="" placeholder="stock" required>
        <input type="number" name="price" id="" placeholder="price" required>
        <button type="submit">Registrar</button>
    </form>
    <ul>
        {{#each products}}
        <li>
            <p>Título: {{this.title}}</p>
            <p>Descripción: {{this.description}}</p>
            <p>Precio: {{this.price}}</p>
            <p>id: {{this._id}}</p>
            <button data-product-id="{{this._id}}">Agregar al carrito</button>
        </li>
        {{/each}}
    </ul>
</div>